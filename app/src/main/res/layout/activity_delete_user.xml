<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DeleteUserActivity"
    android:orientation="vertical">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/deleteUserTextView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="계정 탈퇴"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorAccent"
            android:textSize="24sp"
            android:background="@drawable/list_layout_shape"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/colorBrightGray"
            >

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/deleteUserEmailEditTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이메일"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/profile_count_text_view_shape"
                android:padding="15dp"
                />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 "
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />


            <EditText
                android:id="@+id/deleteUserNameEditTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이름"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                android:background="@drawable/profile_count_text_view_shape"
                android:padding="15dp"
                />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화 번호"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/deleteUserPhoneEditTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="전화 번호"
                android:layout_marginTop="15dp"
                android:background="@drawable/profile_count_text_view_shape"
                android:padding="15dp"
                android:inputType="phone" />


        </LinearLayout>

        <include
            layout="@layout/view_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </LinearLayout>


</LinearLayout>